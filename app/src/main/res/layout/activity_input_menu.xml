<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputMenuActivity">

    <ImageView
        android:id="@+id/img_input"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <Button
        android:id="@+id/choose_img_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Pilih Foto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_input" />

    <EditText
        android:id="@+id/nama_menu_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Masukkan Nama Menu"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_img_input" />

    <EditText
        android:id="@+id/harga_menu_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Masukkan Harga Menu"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/nama_menu_input"
        app:layout_constraintStart_toStartOf="@+id/nama_menu_input"
        app:layout_constraintTop_toBottomOf="@+id/nama_menu_input" />

    <EditText
        android:id="@+id/deskripsi_menu_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Masukkan Deskripsi Menu"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/tambah_btn_input"
        app:layout_constraintEnd_toEndOf="@+id/harga_menu_input"
        app:layout_constraintStart_toStartOf="@+id/harga_menu_input"
        app:layout_constraintTop_toBottomOf="@+id/harga_menu_input"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/tambah_btn_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Tambah Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/deskripsi_menu_input"
        app:layout_constraintStart_toStartOf="@+id/deskripsi_menu_input" />
</android.support.constraint.ConstraintLayout>